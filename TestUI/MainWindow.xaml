<Window x:Class="TestUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUI"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="325" Background="#000000" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown" >
    <Grid>
        <Button Name="btnSerial" Content="Serial" Background="#BB22DD" Margin="20,100,0,0" Style="{DynamicResource TileStyle}" Click="btnSerial_Click"/>
        <Button Name="btnBlowfish" Content="Blowfish" Background="#11DDBB" Margin="20,20,0,0" Style="{DynamicResource TileStyle}" Click="btnBlowfish_Click"/>
        <Button x:Name="btnSpline" Content="Spline" Background="#BBEE55" Margin="100,20,0,0" Style="{DynamicResource TileStyle}" Click="btnSpline_Click"/>
        
        <Button Name="btnClose"  Content="Close" Margin="250,200,0,0" Style="{DynamicResource ButtonStyle}" Click="btnClose_Click"/>
    </Grid>
</Window>
