<Window x:Class="TestUI.Fenster.Spline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUI.Fenster"
        xmlns:Controls="clr-namespace:TestUI.Controls"
        mc:Ignorable="d"
        Title="Spline" 
        WindowStyle="None"
        Background="{DynamicResource BackgroundBrush}"
        Height="500" 
        Width="1500"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <Grid>
        <Controls:Plotter x:Name ="PlotterSpline"  Height="450" Width="1300" Margin="20,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button Name="btnAddValues"  Content="Add" Margin="1340,410,0,0" Style="{DynamicResource ButtonStyle}" Click="btnAddValues_Click"/>
        <Button Name="btnClearValues"  Content="Clear" Margin="1430,410,0,0" Style="{DynamicResource ButtonStyle}" Click="btnClearValues_Click"/>
        <Button Name="btnClose"  Content="Close" Margin="1430,450,0,0" Style="{DynamicResource ButtonStyle}" Click="btnClose_Click"/>
    </Grid>
</Window>
